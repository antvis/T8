{
  "name": "@antv/t8",
  "private": true,
  "repository": "git@github.com:antvis/T8.git",
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "license": "MIT",
  "scripts": {
    "clean": "lerna clean -y && lerna run clean:build && rimraf node_modules",
    "test": "jest",
    "test:ntv": "cd ./packages/NarrativeTextVis && npm run test",
    "build:schema": "cd ./packages/text-schema && npm run build",
    "build:ntv": "cd ./packages/NarrativeTextVis && npm run build",
    "boot": "lerna bootstrap",
    "lint": "lerna run lint",
    "start:ntv-demo": "cd examples/ntv-demo && npm run start",
    "start-live:ntv-demo": "node ./scripts/start-ntv-demo.js",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "npm run boot"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{less,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "concurrently": "^6.2.0",
    "devmoji": "^2.3.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.5",
    "ts-jest": "^27.0.4"
  }
}
