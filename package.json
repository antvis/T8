{
  "name": "@antv/t8",
  "private": true,
  "repository": "git@github.com:antvis/T8.git",
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "rimraf .umi && dumi dev",
    "clean:doc": "rimraf .umi .umi-production site-dist",
    "clean": "lerna clean -y && lerna run clean:build && rimraf node_modules",
    "test": "jest",
    "test:schema": "cd ./packages/narrative-text-schema && npm run test",
    "test:ntv": "cd ./packages/NarrativeTextVis && npm run test",
    "test:chart": "cd ./packages/world-scale-chart && npm run test",
    "test:editor": "cd ./packages/NarrativeTextEditor && npm run test",
    "build:schema": "cd ./packages/narrative-text-schema && npm run build",
    "build:ntv": "cd ./packages/NarrativeTextVis && npm run build",
    "build:chart": "cd ./packages/world-scale-chart && npm run build",
    "build:editor": "cd ./packages/NarrativeTextEditor && npm run build",
    "build:dev": "sh ./scripts/build-dev",
    "build:doc": "dumi build",
    "build": "lerna run build & npm run build:doc",
    "boot": "lerna bootstrap && npm run build:dev",
    "lint": "lerna run lint",
    "start:ntv-demo": "cd examples/ntv-demo && npm run start",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "npm run boot"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{less,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@antv/dumi-theme-antv": "0.2.1",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "antd": "^4.19.5",
    "babel-jest": "^27.5.1",
    "babel-plugin-import": "^1.13.5",
    "concurrently": "^6.2.0",
    "devmoji": "^2.3.0",
    "dumi": "^1.1.40",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-optimize-lodash-imports": "^1.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.5",
    "tslib": "^2.3.1",
    "ts-jest": "^27.0.4"
  }
}
