{
  "name": "@antv/narrative-text-schema",
  "version": "0.3.0",
  "description": "Json schema of narrative text visualization",
  "keywords": [
    "json schema",
    "text visualization",
    "narrative"
  ],
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "unpkg": "dist/narrative-text-schema.min.js",
  "files": [
    "src",
    "esm",
    "lib",
    "build"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "test": "jest",
    "build:esm": "rimraf es && tsc --module esnext --target es2015 --outDir ./es",
    "build:cjs": "rimraf lib && tsc --module commonjs --target es5 --outDir ./lib",
    "build:umd": "rimraf ./dist && rollup -c",
    "build": "run-p build:cjs build:esm build:umd schema",
    "schema": "mkdir -p build && ts-json-schema-generator -f tsconfig.json -p src/index.ts -t NarrativeTextSpec --no-type-check --no-ref-encode > build/text-schema.json",
    "clean": "rimraf node_modules & yarn clean:build",
    "clean:build": "rimraf dist es lib build"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "ts-json-schema-generator": "^0.95.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/react": "^17.0.15"
  }
}
