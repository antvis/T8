{
  "name": "@antv/text-schema",
  "version": "0.1.4",
  "description": "Json schema of narrative text visualization",
  "keywords": [
    "json schema",
    "text visualization",
    "narrative"
  ],
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "src",
    "esm",
    "lib",
    "build"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "build:esm": "rimraf es && tsc --module esnext --target es2015 --outDir ./es",
    "build:cjs": "rimraf lib && tsc --module commonjs --target es5 --outDir ./lib",
    "build": "run-p build:cjs build:esm schema",
    "schema": "mkdir -p build && ts-json-schema-generator -f tsconfig.json -p src/index.ts -t ITextSpecGenerator --no-type-check --no-ref-encode > build/text-schema.json",
    "watch:esm": "yarn build:esm --w",
    "watch:cjs": "yarn build:cjs --w",
    "clean": "rimraf node_modules & yarn clean:build",
    "clean:build": "rimraf dist es lib build",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-json-schema-generator": "^0.95.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@antv/antv-spec": "^0.1.0-alpha.4",
    "@types/react": "^17.0.15"
  }
}
