{
  "name": "@antv/word-scale-chart",
  "version": "0.1.1",
  "description": "word-scale chart for narrative text visualization",
  "keywords": [
    "text",
    "visualization",
    "word-scale"
  ],
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "unpkg": "dist/word-scale-chart.min.js",
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antvis/T8.git"
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "test": "jest",
    "build:esm": "rimraf es && tsc --module esnext --target es2015 --outDir ./es",
    "build:cjs": "rimraf lib && tsc --module commonjs --target es5 --outDir ./lib",
    "build:umd": "rimraf ./dist && rollup -c",
    "build": "run-p build:cjs build:esm build:umd",
    "watch:esm": "yarn build:esm --w",
    "watch:cjs": "yarn build:cjs --w",
    "clean": "rimraf node_modules & yarn clean:build",
    "clean:build": "rimraf dist es lib build",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@types/d3-selection": "^3.0.2",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "d3-selection": "^3.0.0"
  }
}
