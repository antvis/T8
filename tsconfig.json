{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "inlineSourceMap": true
  },
  "exclude": ["node_modules", "**/es", "**/lib", "**/dist", "**/build"]
}
